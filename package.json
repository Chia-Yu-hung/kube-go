{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kube-go",
  "title": "Kube go",
  "description": "Easy open k8s dashboard or access cluster by kube config.",
  "icon": "command-icon.png",
  "author": "Chia-Yu-hung",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "kube go",
      "subtitle": "Choose cluster config",
      "description": "You can open cluster dashboard with firefox or export config to iTerm to access cluster.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.0",
    "open": "^8.4.0",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
